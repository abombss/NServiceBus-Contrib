require 'albacore'
require 'FileUtils'

BUILD_DIR = "build/"
DIST_DIR = "dist"
COMPILE_TARGET = "debug"
BUILD_NUMBER_BASE = "0.1.0"
PRODUCT = "NServiceBus-Contrib"

COPYRIGHT = 'Copyright 2010 Udi Dahan, Andreas Ohlund, Matt Burton, et al. All rights reserved.';
COMMON_ASSEMBLY_INFO = 'src/CommonAssemblyInfo.cs';

#TODO: Change this
task :default => ['version']

def get_version
  ENV['BUILD_NUMBER'] || '1.0.0.0'
end
  
desc "Update the version information for the build"
  assemblyinfo :version do |asm|
  asm_version = BUILD_NUMBER_BASE + ".0"
  
  begin
	gittag = `git describe --long`.chomp 	# looks something like v0.1.0-63-g92228f4
    gitnumberpart = /-(\d+)-/.match(gittag)
    gitnumber = gitnumberpart.nil? ? '0' : gitnumberpart[1]
    commit = (ENV["BUILD_VCS_NUMBER"].nil? ? `git log -1 --pretty=format:%H` : ENV["BUILD_VCS_NUMBER"])
  rescue
    commit = "git unavailable"
    gitnumber = "0"
  end

  build_number = "#{BUILD_NUMBER_BASE}.#{gitnumber}"
  tc_build_number = ENV["BUILD_NUMBER"]

  puts "##teamcity[buildNumber '#{build_number}-#{tc_build_number}']" unless tc_build_number.nil?
  asm.trademark = commit
  asm.product_name = "#{PRODUCT} #{gittag}"
  asm.description = build_number
  asm.version = asm_version
  asm.file_version = build_number
  asm.custom_attributes :AssemblyInformationalVersion => asm_version
  asm.copyright = COPYRIGHT
  asm.output_file = COMMON_ASSEMBLY_INFO
end

namespace :package do
  task :prepare_dist_directory do
    Dir.mkdir DIST_DIR unless File.exists? DIST_DIR
  end

  desc 'Create zip of binaries'
  zip :temp => :prepare_dist_directory do |zip|
    zip.directories_to_zip = ['build/ChangeMe']
    zip.output_file = "ChangeMe.#{get_version}.zip"
    zip.output_path = DIST_DIR
  end
  
  #task :all => [:temp]
end