require 'albacore'
require 'FileUtils'

COMPILE_TARGET = "debug" unless defined?(COMPILE_TARGET)
BUILD_DIR = "build" unless defined?(BUILD_DIR)

task :default => ['build']
 
desc "Prepares the working directory for a new build"
task :clean do
    FileUtils.rm_rf BUILD_DIR
	Dir.mkdir BUILD_DIR
end 

desc "Compile the project"
msbuild :compile do |msb|
	msb.properties :configuration => COMPILE_TARGET
	msb.targets :Clean, :Build
	msb.solution = File.dirname(__FILE__) + "/ServiceBroker.sln"
	msb.path_to_command = File.join(ENV['windir'], 'Microsoft.NET', 'Framework', 'v4.0.30319', 'MSBuild.exe') 
end

task :build => [:clean, :compile] do  
	copyOutputFiles File.dirname(__FILE__)+ "/NServiceBus.Unicast.Transport.ServiceBroker/bin/#{COMPILE_TARGET}", "*.{dll,exe,config,pdb}", File.dirname(__FILE__) + "/#{BUILD_DIR}"
end 

def copyOutputFiles(fromDir, filePattern, outDir)
  mkdir outDir unless File.exists? outDir
  Dir.glob(File.join(fromDir, filePattern)){|file| 		
	copy(file, outDir) if File.file?(file)
  } 
end